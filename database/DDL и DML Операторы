-- DELETE -- позволяет удалить запись/записи из таблицы
-- DELETE FROM <имя таблицы> WHERE <указание условия выбора>;

-- DELETE FROM example WHERE 
-- 	id = '2afb8178-8d7d-442f-95b1-178854f92723';

