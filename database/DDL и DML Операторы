-- DDL - CREATE, ALTER, DROP - Управление сущностями базы данных
-- DML - INSERT, UPDATE, DELETE, SELECT - Управление самими данными в таблицах

-- CREATE - позволяет создавать сущности Базы Данных 
-- CREATE TABLE <название таблицы>
-- (
-- 		<имя атрибута> <тип данных атрибута> <правила/ограничения атрибута>,
--		...
-- 		PRIMARY KEY(<имя атрибута>)
-- )

-- Типы данных:
-- integer - для целых чисел
-- real - для чисел с плавающей запятой
-- text - для текста
-- boolean - для значений истина (true) или ложь (false)
-- uuid - для уникальных id - gen_random_uuid()

-- Ограничения 
-- NOT NULL - запрещает заводить записи с пустым значением атрибута
-- DEFAUL(<значение>) - указывает значение по умолчанию для атрибута
-- PRIMARY KEY - атрибут или набор атрибутов, который УНИКАЛЬНО идентифицирует
--	конкретную запись

-- DROP - удаляет сущность Базы Данных
-- DROP TABLE <имя таблицы>;

-- DROP TABLE IF EXISTS public.example;

-- CREATE TABLE IF NOT EXISTS public.example
-- (
--     id uuid DEFAULT gen_random_uuid(),
--     name text,
--     age integer,

-- 	PRIMARY KEY(id)
-- );

