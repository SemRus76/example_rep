-- SELECT - Позволяет вывести набор данных из таблицы/таблиц
-- SELECT <набор атрибутов> FROM <таблица> WHERE <условие выбора>;

-- UPDATE - Позволяет изменить данные внутри таблицы
-- UPDATE <имя таблицы> SET <атрибут> = <значение> WHERE <условие выбора>; 

